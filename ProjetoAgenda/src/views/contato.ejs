 <%- include('includes/head')%>
 <%- include('includes/nav')%>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-5">
          <h1 class=" text-center"> Contato</h1>
          <p class="text-center lead"> Crie ou edite seus contato abaixo</p>
          <%- include('includes/messages')%>
          <div class="row">
            <% if(contato.id){ %>
            <form action="/contato/edit/<%= contato.id %>" method="POST">
              <% }else{ %>
                <form action="/contato/register" method="POST">
              <% } %>
              <input  type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="form-group">
                <label >Seu Nome</label>
                <input  value="<%= contato.nome %>" type="text" class="form-control" name="nome">
              </div>
              <div class="form-group">
                <label >Seu Sobrenome</label>
                <input  value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome">
              </div>
              <div class="form-group">
                <label >Seu Telefone</label>
                <input  value="<%= contato.telefone %>" type="text" class="form-control" name="telefone">
              </div>
              <div class="form-group">
                <label >Seu Email</label>
                <input  value="<%= contato.email %>" type="text" class="form-control" name="email">
              </div>
              
              <button type="submit" class="btn btn-primary">Criar sua conta</button>
            </form>
        </div>
                  
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>
  
    <%- include('includes/footer')%>